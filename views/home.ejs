<%- include('partials/header'); -%>


<h1>Home</h1>

<p> <%= startingContent %> </p>

<% let ellipses = "..." %>

<% posts.forEach(function(post){ %>
    <h1><%= post.title %> </h1>
    <p>
        <%= post.content.substring(0, 100) + ellipses %>
        <a href="/posts/<%=post.title%>">Read More</a>
    </p>
<% }); %>



